source "https://rubygems.org"

#Sinatra
gem 'sinatra', '~> 1.4.7'
gem 'sinatra-contrib', '~> 1.4.7'
gem "sinatra-param"
gem 'sinatra-strong-params'

# Running
gem 'sinatra-initializers'

#Security
gem 'rack-protection'
gem 'rack_csrf'  #CSRF Protection
gem 'alpaca'     #IP-based ACL lists
gem 'shellex'   #Safe Shell Execution

#Flash Notice
gem 'rack-flash3'

#debugging
group :development do
  gem 'shotgun'
  gem 'pry'
  gem 'pry-byebug'
  gem 'bump'
end

# core
gem 'vmreverter', '~> 0.0.5'

group :test do
  gem 'rake', '0.9.2.2'
  gem 'rack-test', '0.6.1'
  gem 'rspec', '2.7.0'
end
